                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
              <span class="font-medium">Organigramme</span>
            </a>
            
            <a href="/esprit" class="flex items-center space-x-3 text-gray-600 hover:text-red-600 transition-colors p-2 rounded-lg hover:bg-red-50">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
              <span class="font-medium">Esprit du Club</span>
            </a>
            
            <a href="/resultats" class="flex items-center space-x-3 text-gray-600 hover:text-red-600 transition-colors p-2 rounded-lg hover:bg-red-50">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
              </svg>
              <span class="font-medium">Résultats</span>
            </a>
          </div>
        </div>
        
        <!-- Section Sections avec sous-menus pour tablette -->
        <div class="space-y-2">
          <button class="flex items-center justify-between w-full text-gray-700 hover:text-red-600 transition-colors p-3 rounded-lg hover:bg-red-50" id="tablet-sections-menu-toggle">
            <div class="flex items-center space-x-4">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14-4H5m14 8H5m14 4H5"></path>
              </svg>
              <span class="font-medium text-lg">Sections</span>
            </div>
            <svg class="w-5 h-5 transition-transform duration-200" id="tablet-sections-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </button>
          
          <div class="ml-10 space-y-2 hidden" id="tablet-sections-submenu">
            <a href="/competition" class="flex items-center space-x-3 text-gray-600 hover:text-red-600 transition-colors p-2 rounded-lg hover:bg-red-50">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
              </svg>
              <span class="font-medium">Compétition</span>
            </a>
            
            <a href="/ecole-de-velo" class="flex items-center space-x-3 text-gray-600 hover:text-red-600 transition-colors p-2 rounded-lg hover:bg-red-50">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <circle cx="5.5" cy="17.5" r="3.5" stroke-width="2"/>
                <circle cx="18.5" cy="17.5" r="3.5" stroke-width="2"/>
                <path d="M15 6a1 1 0 1 0 0-2 1 1 0 0 0 0 2z" stroke-width="2"/>
                <path d="M9 12h3l3-6h2l1.5 3" stroke-width="2"/>
                <path d="M9 12v5" stroke-width="2"/>
                <path d="M15 12l-3 5" stroke-width="2"/>
              </svg>
              <span class="font-medium">École de vélo</span>
            </a>
            
            <a href="/cyclosport" class="flex items-center space-x-3 text-gray-600 hover:text-red-600 transition-colors p-2 rounded-lg hover:bg-red-50">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
              <span class="font-medium">Cyclosport</span>
            </a>
            
            <a href="/loisirs" class="flex items-center space-x-3 text-gray-600 hover:text-red-600 transition-colors p-2 rounded-lg hover:bg-red-50">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h1m4 0h1m-6 4h8m-5-10v20m5-20v20"></path>
              </svg>
              <span class="font-medium">Loisirs</span>
            </a>
          </div>
        </div>
        
        <a href="/nous-rejoindre" class="flex items-center space-x-4 text-gray-700 hover:text-red-600 transition-colors p-3 rounded-lg hover:bg-red-50">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
          <span class="font-medium text-lg">Nous rejoindre</span>
        </a>
        
        <a href="/nous-soutenir" class="flex items-center space-x-4 text-gray-700 hover:text-red-600 transition-colors p-3 rounded-lg hover:bg-red-50">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
          </svg>
          <span class="font-medium text-lg">Nous soutenir</span>
        </a>
      </nav>
    </div>
  </div>
</div>

<script>
  // JavaScript pour la navigation tablette
  const tabletMenuToggle = document.getElementById('tablet-menu-toggle');
  const tabletMenuOverlay = document.getElementById('tablet-menu-overlay');
  const tabletMenuPanel = document.getElementById('tablet-menu-panel');
  const tabletLine1 = document.getElementById('tablet-line1');
  const tabletLine2 = document.getElementById('tablet-line2');
  const tabletLine3 = document.getElementById('tablet-line3');
  
  const tabletClubMenuToggle = document.getElementById('tablet-club-menu-toggle');
  const tabletClubSubmenu = document.getElementById('tablet-club-submenu');
  const tabletClubArrow = document.getElementById('tablet-club-arrow');
  
  const tabletSectionsMenuToggle = document.getElementById('tablet-sections-menu-toggle');
  const tabletSectionsSubmenu = document.getElementById('tablet-sections-submenu');
  const tabletSectionsArrow = document.getElementById('tablet-sections-arrow');
  
  let isTabletMenuOpen = false;
  let isTabletClubSubmenuOpen = false;
  let isTabletSectionsSubmenuOpen = false;
  
  function toggleTabletMenu() {
    isTabletMenuOpen = !isTabletMenuOpen;
    
    if (isTabletMenuOpen) {
      tabletMenuOverlay?.classList.remove('opacity-0', 'invisible');
      tabletMenuPanel?.classList.remove('-translate-x-full');
      tabletLine1?.classList.add('rotate-45', 'translate-y-1.5');
      tabletLine2?.classList.add('opacity-0');
      tabletLine3?.classList.add('-rotate-45', '-translate-y-1.5');
    } else {
      tabletMenuOverlay?.classList.add('opacity-0', 'invisible');
      tabletMenuPanel?.classList.add('-translate-x-full');
      tabletLine1?.classList.remove('rotate-45', 'translate-y-1.5');
      tabletLine2?.classList.remove('opacity-0');
      tabletLine3?.classList.remove('-rotate-45', '-translate-y-1.5');
      
      if (isTabletClubSubmenuOpen) {
        toggleTabletClubSubmenu();
      }
      if (isTabletSectionsSubmenuOpen) {
        toggleTabletSectionsSubmenu();
      }
    }
  }
  
  function toggleTabletClubSubmenu() {
    isTabletClubSubmenuOpen = !isTabletClubSubmenuOpen;
    
    if (isTabletClubSubmenuOpen) {
      tabletClubSubmenu?.classList.remove('hidden');
      tabletClubArrow?.classList.add('rotate-90');
    } else {
      tabletClubSubmenu?.classList.add('hidden');
      tabletClubArrow?.classList.remove('rotate-90');
    }
  }
  
  function toggleTabletSectionsSubmenu() {
    isTabletSectionsSubmenuOpen = !isTabletSectionsSubmenuOpen;
    
    if (isTabletSectionsSubmenuOpen) {
      tabletSectionsSubmenu?.classList.remove('hidden');
      tabletSectionsArrow?.classList.add('rotate-90');
    } else {
      tabletSectionsSubmenu?.classList.add('hidden');
      tabletSectionsArrow?.classList.remove('rotate-90');
    }
  }
  
  if (tabletMenuToggle) {
    tabletMenuToggle.addEventListener('click', toggleTabletMenu);
  }
  
  if (tabletClubMenuToggle) {
    tabletClubMenuToggle.addEventListener('click', toggleTabletClubSubmenu);
  }
  
  if (tabletSectionsMenuToggle) {
    tabletSectionsMenuToggle.addEventListener('click', toggleTabletSectionsSubmenu);
  }
  
  if (tabletMenuOverlay) {
    tabletMenuOverlay.addEventListener('click', (e) => {
      if (e.target === tabletMenuOverlay) {
        toggleTabletMenu();
      }
    });
  }
</script>