        </div>
        
        <!-- Section Sections avec sous-menus pour mobile -->
        <div class="space-y-2">
          <button class="flex items-center justify-between w-full text-gray-700 hover:text-red-600 transition-colors p-4 rounded-lg hover:bg-red-50 touch-manipulation text-lg" id="mobile-sections-menu-toggle">
            <div class="flex items-center space-x-3">
