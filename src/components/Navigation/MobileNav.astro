            </a>
          </div>
        </div>
        
        <a href="/nous-rejoindre" class="flex items-center space-x-3 text-gray-700 hover:text-red-600 transition-colors p-4 rounded-lg hover:bg-red-50 touch-manipulation text-lg">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
          <span class="font-medium">Nous rejoindre</span>
        </a>
        
        <a href="/nous-soutenir" class="flex items-center space-x-3 text-gray-700 hover:text-red-600 transition-colors p-4 rounded-lg hover:bg-red-50 touch-manipulation text-lg">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
          </svg>
          <span class="font-medium">Nous soutenir</span>
        </a>
      </nav>
    </div>
  </div>
</div>

<script>
  // JavaScript pour la navigation mobile
  const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
  const mobileMenuOverlay = document.getElementById('mobile-menu-overlay');
  const mobileMenuPanel = document.getElementById('mobile-menu-panel');
  const mobileLine1 = document.getElementById('mobile-line1');
  const mobileLine2 = document.getElementById('mobile-line2');
  const mobileLine3 = document.getElementById('mobile-line3');
  
  const mobileClubMenuToggle = document.getElementById('mobile-club-menu-toggle');
  const mobileClubSubmenu = document.getElementById('mobile-club-submenu');
  const mobileClubArrow = document.getElementById('mobile-club-arrow');
  
  const mobileSectionsMenuToggle = document.getElementById('mobile-sections-menu-toggle');
  const mobileSectionsSubmenu = document.getElementById('mobile-sections-submenu');
  const mobileSectionsArrow = document.getElementById('mobile-sections-arrow');
  
  let isMobileMenuOpen = false;
  let isMobileClubSubmenuOpen = false;
  let isMobileSectionsSubmenuOpen = false;
  
  function toggleMobileMenu() {
    isMobileMenuOpen = !isMobileMenuOpen;
    
    if (isMobileMenuOpen) {
      mobileMenuOverlay?.classList.remove('opacity-0', 'invisible');
      mobileMenuPanel?.classList.remove('-translate-x-full');
      mobileLine1?.classList.add('rotate-45', 'translate-y-1.5');
      mobileLine2?.classList.add('opacity-0');
      mobileLine3?.classList.add('-rotate-45', '-translate-y-1.5');
    } else {
      mobileMenuOverlay?.classList.add('opacity-0', 'invisible');
      mobileMenuPanel?.classList.add('-translate-x-full');
      mobileLine1?.classList.remove('rotate-45', 'translate-y-1.5');
      mobileLine2?.classList.remove('opacity-0');
      mobileLine3?.classList.remove('-rotate-45', '-translate-y-1.5');
      
      // Fermer les sous-menus quand on ferme le menu principal
      if (isMobileClubSubmenuOpen) {
        toggleMobileClubSubmenu();
      }
      if (isMobileSectionsSubmenuOpen) {
        toggleMobileSectionsSubmenu();
      }
    }
  }
  
  function toggleMobileClubSubmenu() {
    isMobileClubSubmenuOpen = !isMobileClubSubmenuOpen;
    
    if (isMobileClubSubmenuOpen) {
      mobileClubSubmenu?.classList.remove('hidden');
      mobileClubArrow?.classList.add('rotate-90');
    } else {
      mobileClubSubmenu?.classList.add('hidden');
      mobileClubArrow?.classList.remove('rotate-90');
    }
  }
  
  function toggleMobileSectionsSubmenu() {
    isMobileSectionsSubmenuOpen = !isMobileSectionsSubmenuOpen;
    
    if (isMobileSectionsSubmenuOpen) {
      mobileSectionsSubmenu?.classList.remove('hidden');
      mobileSectionsArrow?.classList.add('rotate-90');
    } else {
      mobileSectionsSubmenu?.classList.add('hidden');
      mobileSectionsArrow?.classList.remove('rotate-90');
    }
  }
  
  if (mobileMenuToggle) {
    mobileMenuToggle.addEventListener('click', toggleMobileMenu);
  }
  
  if (mobileClubMenuToggle) {
    mobileClubMenuToggle.addEventListener('click', toggleMobileClubSubmenu);
  }
  
  if (mobileSectionsMenuToggle) {
    mobileSectionsMenuToggle.addEventListener('click', toggleMobileSectionsSubmenu);
  }
  
  if (mobileMenuOverlay) {
    mobileMenuOverlay.addEventListener('click', (e) => {
      if (e.target === mobileMenuOverlay) {
        toggleMobileMenu();
      }
    });
  }
</script>