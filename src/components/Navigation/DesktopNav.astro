---
// Navigation optimisée pour desktop
---

<!-- Navigation Desktop avec menu horizontal -->
<nav class="hidden lg:block fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-sm shadow-sm">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-center h-16 relative">
      <!-- Logo centré -->
      <div class="absolute left-4">
        <a href="/" class="flex items-center">
          <img src="/images/logo-officiel-ecof.png" alt="E.C.O.F." class="h-20 w-auto object-contain" />
        </a>
      </div>
      
      <!-- Menu principal centré -->
      <div class="flex items-center space-x-8">
        <a href="/" class="text-gray-700 hover:text-red-600 transition-colors font-medium">
          Accueil
        </a>
        
        <!-- Dropdown Vie du club -->
        <div class="relative group">
          <button class="text-gray-700 hover:text-red-600 transition-colors font-medium flex items-center space-x-1">
            <span>Vie du club</span>
            <svg class="w-4 h-4 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          
          <!-- Dropdown menu -->
          <div class="absolute top-full left-0 mt-2 w-48 bg-white rounded-lg shadow-lg border opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
            <div class="py-2">
              <a href="/actualites" class="block px-4 py-2 text-gray-700 hover:bg-red-50 hover:text-red-600 transition-colors">
                Actualités
              </a>
              <a href="/calendrier" class="block px-4 py-2 text-gray-700 hover:bg-red-50 hover:text-red-600 transition-colors">
                Agenda
              </a>
              <a href="/resultats" class="block px-4 py-2 text-gray-700 hover:bg-red-50 hover:text-red-600 transition-colors">
                Résultats
              </a>
            </div>
          </div>
        </div>
        
        <!-- Dropdown Club -->
        <div class="relative group">
          <button class="text-gray-700 hover:text-red-600 transition-colors font-medium flex items-center space-x-1">
            <span>Club</span>
            <svg class="w-4 h-4 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          
          <!-- Dropdown menu -->
          <div class="absolute top-full left-0 mt-2 w-48 bg-white rounded-lg shadow-lg border opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
            <div class="py-2">
              <a href="/organigramme" class="block px-4 py-2 text-gray-700 hover:bg-red-50 hover:text-red-600 transition-colors">
                Organigramme
              </a>
              <a href="/historique" class="block px-4 py-2 text-gray-700 hover:bg-red-50 hover:text-red-600 transition-colors">
                Historique
              </a>
              <a href="/esprit" class="block px-4 py-2 text-gray-700 hover:bg-red-50 hover:text-red-600 transition-colors">
                Esprit
              </a>
            </div>
          </div>
        </div>
        
        <!-- Dropdown Sections -->
        <div class="relative group">
          <button class="text-gray-700 hover:text-red-600 transition-colors font-medium flex items-center space-x-1">
            <span>Sections</span>
            <svg class="w-4 h-4 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          
          <!-- Dropdown menu -->
          <div class="absolute top-full left-0 mt-2 w-48 bg-white rounded-lg shadow-lg border opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
            <div class="py-2">
              <a href="/competition" class="block px-4 py-2 text-gray-700 hover:bg-red-50 hover:text-red-600 transition-colors">
                Compétition
              </a>
              <a href="/ecole-de-velo" class="block px-4 py-2 text-gray-700 hover:bg-red-50 hover:text-red-600 transition-colors">
                École de vélo
              </a>
              <a href="/cyclosport" class="block px-4 py-2 text-gray-700 hover:bg-red-50 hover:text-red-600 transition-colors">
                Cyclosport
              </a>
              <a href="/loisirs" class="block px-4 py-2 text-gray-700 hover:bg-red-50 hover:text-red-600 transition-colors">
                Loisirs
              </a>
            </div>
          </div>
        </div>
        
        <a href="/nous-rejoindre" class="text-gray-700 hover:text-red-600 transition-colors font-medium">
          Nous rejoindre
        </a>
      </div>
      
      <!-- Icônes sociales et bouton à droite -->
      <div class="absolute right-4 flex items-center space-x-4">
        <a href="https://www.facebook.com/p/ECOFirminy-Cyclisme-100057631112293/" target="_blank" rel="noopener noreferrer" class="text-gray-700 hover:text-red-600 transition-colors" aria-label="Facebook ECOF">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
          </svg>
        </a>
        
        <a href="#" class="text-gray-700 hover:text-red-600 transition-colors" aria-label="Instagram ECOF">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
          </svg>
        </a>
        
        <a href="/nous-soutenir" class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition-colors font-medium">
          Nous soutenir
        </a>
      </div>
    </div>
  </div>
</nav>

<!-- Spacer pour compenser la navigation fixe -->
<div class="hidden lg:block h-16"></div>