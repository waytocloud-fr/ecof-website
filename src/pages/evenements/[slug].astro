---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const evenements = await getCollection('evenements');
  return evenements.map((evenement) => ({
    params: { slug: evenement.slug },
    props: { evenement },
  }));
}

const { evenement } = Astro.props;
const { Content } = await evenement.render();
---

<BaseLayout title={evenement.data.title} description={evenement.data.description}>
  <article class="min-h-screen bg-gray-50 py-12">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header de l'article -->
      <div class="bg-white rounded-2xl shadow-lg overflow-hidden mb-8">
        {evenement.data.image && (
          <div class="h-64 md:h-96 overflow-hidden">
            <img 
              src={`${evenement.data.image}?v=${Date.now()}`}
              alt={evenement.data.title}
              class="w-full h-full object-cover"
            />
          </div>
        )}
        
        <div class="p-8">
          <div class="flex items-center space-x-4 text-sm text-gray-500 mb-4">
            <span>{new Date(evenement.data.pubDate).toLocaleDateString('fr-FR', { 
              year: 'numeric', 
              month: 'long', 
              day: 'numeric' 
            })}</span>
            {evenement.data.heure && (
              <>
                <span>•</span>
                <span>{evenement.data.heure}</span>
              </>
            )}
            {evenement.data.lieu && (
              <>
                <span>•</span>
                <span>{evenement.data.lieu}</span>
              </>
            )}
          </div>
          
          <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            {evenement.data.title}
          </h1>
          
          {evenement.data.description && (
            <div class="bg-gray-100 border-l-4 border-red-500 p-6 mb-6">
              <p class="text-lg text-gray-700 leading-relaxed">
                {evenement.data.description}
              </p>
            </div>
          )}
        </div>
      </div>

      <!-- Contenu de l'article -->
      <div class="bg-white rounded-2xl shadow-lg p-8">
        <div class="prose prose-lg max-w-none">
          <Content />
        </div>
      </div>

      <!-- Navigation -->
      <div class="mt-8 text-center">
        <a 
          href="/calendrier" 
          class="inline-flex items-center px-6 py-3 bg-red-600 text-white font-semibold rounded-lg hover:bg-red-700 transition-colors"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Retour au calendrier
        </a>
      </div>
    </div>
  </article>
</BaseLayout>

<style>
  .prose h1, .prose h2, .prose h3 {
    color: #1f2937;
  }
  
  .prose h2 {
    font-size: 1.5rem;
    font-weight: 700;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  
  .prose h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }
  
  .prose p {
    margin-bottom: 1rem;
    line-height: 1.7;
  }
  
  .prose strong {
    font-weight: 600;
    color: #dc2626;
  }
  
  .prose em {
    font-style: italic;
    color: #6b7280;
  }
  
  /* Styles pour les images dans le contenu Markdown */
  .prose img {
    width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 1.5rem 0;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }
  
  .prose figure {
    margin: 1.5rem 0;
  }
  
  .prose figcaption {
    text-align: center;
    font-style: italic;
    color: #6b7280;
    margin-top: 0.5rem;
    font-size: 0.875rem;
  }
</style>