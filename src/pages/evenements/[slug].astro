---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const evenements = await getCollection('evenements');
  return evenements.map((evenement) => ({
    params: { slug: evenement.slug },
    props: { evenement },
  }));
}

const { evenement } = Astro.props;
const { Content } = await evenement.render();

// Fonction pour obtenir la couleur selon le type d'√©v√©nement
function getEventColor(type: string) {
  switch(type) {
    case 'ecole-velo': return 'from-green-500 to-emerald-600';
    case 'sortie-club': return 'from-blue-500 to-blue-600';
    case 'competition': return 'from-red-500 to-red-600';
    case 'reunion': return 'from-purple-500 to-purple-600';
    default: return 'from-gray-500 to-gray-600';
  }
}

// Fonction pour obtenir l'ic√¥ne selon le type d'√©v√©nement
function getEventIcon(type: string) {
  switch(type) {
    case 'ecole-velo': return 'üö≤';
    case 'sortie-club': return 'üö¥‚Äç‚ôÇÔ∏è';
    case 'competition': return 'üèÜ';
    case 'reunion': return 'üë•';
    default: return 'üìÖ';
  }
}
---

<BaseLayout title={evenement.data.title} description={evenement.data.description}>
  <div class="min-h-screen bg-gray-50 py-12">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Breadcrumb -->
      <nav class="mb-8">
        <ol class="flex items-center space-x-2 text-sm text-gray-600">
          <li><a href="/" class="hover:text-red-600 transition-colors">Accueil</a></li>
          <li class="flex items-center">
            <svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
            <a href="/calendrier" class="hover:text-red-600 transition-colors">Calendrier</a>
          </li>
          <li class="flex items-center">
            <svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
            <span class="text-gray-900">{evenement.data.title}</span>
          </li>
        </ol>
      </nav>

      <!-- Article principal -->
      <article class="bg-white rounded-2xl shadow-lg overflow-hidden">
        <!-- En-t√™te de l'√©v√©nement -->
        <div class={`bg-gradient-to-br ${getEventColor(evenement.data.type)} p-8 text-white`}>
          <div class="flex items-center justify-between mb-6">
            <div class="text-6xl">
              {getEventIcon(evenement.data.type)}
            </div>
            <div class="text-right">
              <div class="text-3xl font-bold">
                {new Date(evenement.data.date).getDate()}
              </div>
              <div class="text-lg uppercase tracking-wide">
                {new Date(evenement.data.date).toLocaleDateString('fr-FR', { month: 'long', year: 'numeric' })}
              </div>
              {evenement.data.heure && (
                <div class="text-sm opacity-90 mt-1">
                  {evenement.data.heure}
                </div>
              )}
            </div>
          </div>
          
          <h1 class="text-4xl font-bold mb-4">{evenement.data.title}</h1>
          <p class="text-xl opacity-90">{evenement.data.description}</p>
        </div>

        <!-- Informations pratiques -->
        <div class="p-8 bg-gray-50 border-b border-gray-200">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Informations pratiques</h2>
          <div class="grid md:grid-cols-2 gap-6">
            <div class="space-y-4">
              <div class="flex items-center">
                <svg class="w-5 h-5 mr-3 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <div>
                  <span class="font-semibold text-gray-900">Date :</span>
                  <span class="ml-2 text-gray-700">
                    {new Date(evenement.data.date).toLocaleDateString('fr-FR', { 
                      weekday: 'long', 
                      year: 'numeric', 
                      month: 'long', 
                      day: 'numeric' 
                    })}
                  </span>
                </div>
              </div>
              
              {evenement.data.heure && (
                <div class="flex items-center">
                  <svg class="w-5 h-5 mr-3 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <div>
                    <span class="font-semibold text-gray-900">Horaire :</span>
                    <span class="ml-2 text-gray-700">{evenement.data.heure}</span>
                  </div>
                </div>
              )}
              
              {evenement.data.lieu && (
                <div class="flex items-center">
                  <svg class="w-5 h-5 mr-3 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                  <div>
                    <span class="font-semibold text-gray-900">Lieu :</span>
                    <span class="ml-2 text-gray-700">{evenement.data.lieu}</span>
                  </div>
                </div>
              )}
            </div>
            
            <div class="space-y-4">
              {evenement.data.distance && (
                <div class="flex items-center">
                  <svg class="w-5 h-5 mr-3 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                  </svg>
                  <div>
                    <span class="font-semibold text-gray-900">Distance :</span>
                    <span class="ml-2 text-gray-700">{evenement.data.distance}</span>
                  </div>
                </div>
              )}
              
              {evenement.data.difficulte && (
                <div class="flex items-center">
                  <svg class="w-5 h-5 mr-3 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                  </svg>
                  <div>
                    <span class="font-semibold text-gray-900">Difficult√© :</span>
                    <span class="ml-2 text-gray-700">{evenement.data.difficulte}</span>
                  </div>
                </div>
              )}
              
              {evenement.data.contact && (
                <div class="flex items-center">
                  <svg class="w-5 h-5 mr-3 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                  <div>
                    <span class="font-semibold text-gray-900">Contact :</span>
                    <span class="ml-2 text-gray-700">{evenement.data.contact}</span>
                  </div>
                </div>
              )}
            </div>
          </div>
          
          {evenement.data.inscriptionRequise && (
            <div class="mt-6 p-4 bg-orange-50 border-l-4 border-orange-500 rounded-r-lg">
              <div class="flex items-center">
                <svg class="w-5 h-5 mr-2 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                </svg>
                <span class="font-semibold text-orange-800">Inscription requise</span>
              </div>
            </div>
          )}
        </div>

        <!-- Image (si disponible) -->
        {evenement.data.image && (
          <div class="p-8">
            <img 
              src={evenement.data.image} 
              alt={evenement.data.title}
              class="w-full h-64 md:h-80 object-contain rounded-xl shadow-lg bg-gray-50"
            />
          </div>
        )}

        <!-- Contenu de l'√©v√©nement -->
        <div class="p-8">
          <div class="prose prose-lg max-w-none prose-red">
            <Content />
          </div>
        </div>

        <!-- Actions -->
        <div class="p-8 bg-gray-50 border-t border-gray-200">
          <div class="flex flex-col sm:flex-row gap-4 justify-between items-center">
            <a 
              href="/calendrier" 
              class="inline-flex items-center px-6 py-3 bg-gray-600 text-white font-semibold rounded-lg hover:bg-gray-700 transition-colors duration-200"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
              </svg>
              Retour au calendrier
            </a>
            
            {evenement.data.lien && (
              <a 
                href={evenement.data.lien}
                target="_blank"
                class="inline-flex items-center px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors duration-200"
              >
                Plus d'informations
                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                </svg>
              </a>
            )}
          </div>
        </div>
      </article>
    </div>
  </div>
</BaseLayout>

<style>
  /* Styles pour les images dans le contenu Markdown */
  .prose img {
    width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 1.5rem 0;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }
  
  .prose figure {
    margin: 1.5rem 0;
  }
  
  .prose figcaption {
    text-align: center;
    font-style: italic;
    color: #6b7280;
    margin-top: 0.5rem;
    font-size: 0.875rem;
  }
</style>