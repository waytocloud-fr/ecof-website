---
import BaseLayout from '../layouts/BaseLayout.astro';

// Récupérer toutes les actualités
const allNewsModules = import.meta.glob('../content/actualites/*.md');
const allNews = await Promise.all(
  Object.entries(allNewsModules).map(async ([path, module]) => {
    const mod = await module() as any;
    return {
      ...mod,
      file: path
    };
  })
);
const sortedNews = allNews
  .sort((a, b) => new Date(b.frontmatter.pubDate || b.frontmatter.date).getTime() - new Date(a.frontmatter.pubDate || a.frontmatter.date).getTime());
---

<BaseLayout title="Actualités" description="Toutes les actualités de l'Étoile Cycliste Ouvrière de Firminy">
  <div class="pt-20 pb-16 bg-gradient-to-br from-red-50 to-red-100">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
        Actualités du club
      </h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Restez informé des dernières nouvelles et événements de l'ECOF
      </p>
    </div>
  </div>

  <section class="py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="space-y-12">
        {sortedNews.map((news) => {
          const slug = news.file.split('/').pop()?.replace('.md', '') || '';
          const publishDate = news.frontmatter.pubDate || news.frontmatter.date;
          const description = news.frontmatter.description || news.frontmatter.excerpt || '';
          
          return (
            <a href={`/actualites/${slug}`} class="block">
              <article class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 cursor-pointer">
                <div class="md:flex">
                  {news.frontmatter.image && (
                    <div class="md:w-1/3">
                      <img 
                        src={`${news.frontmatter.image}?v=${Date.now()}`}
                        alt={news.frontmatter.title}
                        class="w-full h-48 md:h-full object-cover hover:scale-105 transition-transform duration-300"
                      />
                    </div>
                  )}
                  <div class={news.frontmatter.image ? "md:w-2/3 p-8" : "w-full p-8"}>
                    <div class="flex items-center mb-4">
                      {news.frontmatter.tags && news.frontmatter.tags[0] && (
                        <span class="bg-red-100 text-red-800 text-sm font-medium px-3 py-1 rounded-full">
                          {news.frontmatter.tags[0]}
                        </span>
                      )}
                      <span class="text-gray-500 text-sm ml-4">
                        {new Date(publishDate).toLocaleDateString('fr-FR', { 
                          year: 'numeric', 
                          month: 'long', 
                          day: 'numeric' 
                        })}
                      </span>
                    </div>
                    <h2 class="text-2xl font-bold text-gray-900 mb-4 hover:text-red-600 transition-colors">
                      {news.frontmatter.title}
                    </h2>
                    <p class="text-gray-600">
                      {description.substring(0, 200)}...
                    </p>
                  </div>
                </div>
              </article>
            </a>
          );
        })}
        
        {sortedNews.length === 0 && (
          <div class="text-center py-12">
            <p class="text-gray-500 text-lg">Aucune actualité disponible pour le moment.</p>
          </div>
        )}
      </div>
    </div>
  </section>
</BaseLayout>