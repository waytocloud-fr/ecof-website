---
import BaseLayout from '../layouts/BaseLayout.astro';

// R√©cup√©rer les derni√®res actualit√©s
const allNewsModules = import.meta.glob('../content/actualites/*.md');
const allNews = await Promise.all(
  Object.entries(allNewsModules).map(async ([path, module]) => {
    const mod = await (module as any)();
    return {
      ...mod,
      file: path
    };
  })
);
const recentNews = allNews
  .sort((a, b) => new Date(b.frontmatter.date).getTime() - new Date(a.frontmatter.date).getTime())
  .slice(0, 3);

// R√©cup√©rer les derniers r√©sultats
const allResultsModules = import.meta.glob('../content/resultats/*.md');
const allResults = await Promise.all(
  Object.entries(allResultsModules).map(async ([path, module]) => {
    const mod = await (module as any)();
    return {
      ...mod,
      file: path
    };
  })
);
const recentResults = allResults
  .sort((a, b) => new Date(b.frontmatter.date).getTime() - new Date(a.frontmatter.date).getTime())
  .slice(0, 3);
