---
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const allNewsModules = import.meta.glob('../../content/actualites/*.md');
  const allNews = await Promise.all(
    Object.entries(allNewsModules).map(async ([path, module]) => {
      const mod = await (module as any)();
      return {
        ...mod,
        file: path
      };
    })
  );
  
  return allNews.map((news: any) => {
    const slug = news.file.split('/').pop()?.replace('.md', '') || '';
    return {
      params: { slug },
      props: { news }
    };
  });
}

const { news }: { news: any } = Astro.props;
const { Content } = news;

// G√©rer les diff√©rents formats de m√©tadonn√©es
const publishDate = news.frontmatter.pubDate || news.frontmatter.date;
const description = news.frontmatter.description || news.frontmatter.excerpt || '';
---

<BaseLayout title={news.frontmatter.title} description={description}>
  <article class="min-h-screen bg-gray-50 py-12">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header de l'article -->
      <div class="bg-white rounded-2xl shadow-lg overflow-hidden mb-8">
        {news.frontmatter.image && (
          <div class="h-64 md:h-96 overflow-hidden">
            <img 
              src={`${news.frontmatter.image}?v=${Date.now()}`}
              alt={news.frontmatter.title}
              class="w-full h-full object-cover"
            />
          </div>
        )}
        
        <div class="p-8">
          <div class="flex items-center space-x-4 text-sm text-gray-500 mb-4">
            <span>{new Date(publishDate).toLocaleDateString('fr-FR', { 
              year: 'numeric', 
              month: 'long', 
              day: 'numeric' 
            })}</span>
            {news.frontmatter.author && (
              <>
                <span>‚Ä¢</span>
                <span>Par {news.frontmatter.author}</span>
              </>
            )}
          </div>
          
          <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            {news.frontmatter.title}
          </h1>
          
          {description && (
            <div class="bg-gray-100 border-l-4 border-red-500 p-6 mb-6">
              <h3 class="text-lg font-semibold text-gray-800 mb-2">üìù Description de l'article :</h3>
              <p class="text-lg text-gray-700 leading-relaxed">
                {description}
              </p>
            </div>
          )}
        </div>
      </div>

      <!-- Contenu de l'article -->
      <div class="bg-white rounded-2xl shadow-lg p-8">
        <div class="prose prose-lg max-w-none">
          <Content />
        </div>
      </div>

      <!-- Navigation -->
      <div class="mt-8 text-center">
        <a 
          href="/actualites" 
          class="inline-flex items-center px-6 py-3 bg-red-600 text-white font-semibold rounded-lg hover:bg-red-700 transition-colors"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Retour aux actualit√©s
        </a>
      </div>
    </div>
  </article>
</BaseLayout>

<style>
