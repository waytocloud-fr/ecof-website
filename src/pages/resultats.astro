---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Récupérer tous les résultats et les trier par date décroissante
const allResultats = await getCollection('resultats');
const resultats = allResultats.sort((a, b) => 
  new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);
---

<BaseLayout title="Résultats" description="Résultats des compétitions et courses de l'Étoile Cycliste Ouvrière de Firminy">
  <div class="min-h-screen bg-gray-50 py-12">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">Résultats</h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Suivez les performances de nos coureurs lors des compétitions et courses
        </p>
      </div>

      <!-- Fil d'actualité des résultats -->
      <div class="space-y-8">
        {resultats.map((resultat) => (
          <article class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
            <!-- En-tête de l'article -->
            <div class="p-6 border-b border-gray-100">
              <div class="flex justify-between items-start mb-4">
                <div>
                  <h2 class="text-2xl font-bold text-gray-900 mb-2">{resultat.data.title}</h2>
                  <div class="flex flex-wrap gap-4 text-sm text-gray-600">
                    <span class="flex items-center">
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                      </svg>
                      {new Date(resultat.data.date).toLocaleDateString('fr-FR', { 
                        year: 'numeric', 
                        month: 'long', 
                        day: 'numeric' 
                      })}
                    </span>
                    {resultat.data.lieu && (
                      <span class="flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                        {resultat.data.lieu}
                      </span>
                    )}
                    {resultat.data.distance && (
                      <span class="flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                        </svg>
                        {resultat.data.distance}
                      </span>
                    )}
                  </div>
                </div>
              </div>
              
              {resultat.data.description && (
                <p class="text-gray-700 mb-4">{resultat.data.description}</p>
              )}
            </div>

            <!-- Photos (si disponibles) -->
            {resultat.data.images && resultat.data.images.length > 0 && (
              <div class="px-6 py-4">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                  {resultat.data.images.slice(0, 2).map((image) => (
                    <img 
                      src={image} 
                      alt={`Photo ${resultat.data.epreuve}`}
                      class="w-full h-48 object-cover rounded-lg"
                    />
                  ))}
                </div>
              </div>
            )}

            <!-- Résultats des participants -->
            <div class="p-6">
              <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                <svg class="w-5 h-5 mr-2 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
                </svg>
                Résultats ECOF
              </h3>
              
              <div class="space-y-3">
                {resultat.data.participants.map((participant) => (
                  <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                    <div class="flex items-center space-x-4">
                      {participant.position && (
                        <div class={`w-8 h-8 rounded-full flex items-center justify-center text-sm font-bold text-white ${
                          participant.position === 1 ? 'bg-yellow-500' :
                          participant.position === 2 ? 'bg-gray-400' :
                          participant.position === 3 ? 'bg-orange-600' :
                          'bg-red-600'
                        }`}>
                          {participant.position}
                        </div>
                      )}
                      <div>
                        <p class="font-semibold text-gray-900">{participant.nom}</p>
                        {participant.categorie && (
                          <p class="text-sm text-gray-600">{participant.categorie}</p>
                        )}
                        {participant.commentaire && (
                          <p class="text-sm text-gray-500 italic">{participant.commentaire}</p>
                        )}
                      </div>
                    </div>
                    {participant.temps && (
                      <div class="text-right">
                        <p class="font-mono text-lg font-semibold text-gray-900">{participant.temps}</p>
                      </div>
                    )}
                  </div>
                ))}
              </div>
            </div>
          </article>
        ))}
      </div>

      <!-- Message si aucun résultat -->
      {resultats.length === 0 && (
        <div class="text-center py-12">
          <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
          </svg>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Aucun résultat disponible</h3>
          <p class="text-gray-600">Les résultats des prochaines compétitions apparaîtront ici.</p>
        </div>
      )}

      <!-- Prochaines compétitions -->
      <div class="mt-16 bg-white rounded-2xl shadow-lg p-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
          <svg class="w-6 h-6 mr-3 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          Prochaines compétitions
        </h2>
        <div class="space-y-4">
          <div class="border-l-4 border-red-600 pl-4 py-2">
            <p class="font-medium text-gray-900">Grand Prix de la Loire</p>
            <p class="text-sm text-gray-600">2 février 2026 - Route</p>
            <p class="text-xs text-gray-500">Inscriptions ouvertes</p>
          </div>
          <div class="border-l-4 border-yellow-500 pl-4 py-2">
            <p class="font-medium text-gray-900">Cyclo-cross régional</p>
            <p class="text-sm text-gray-600">9 février 2026 - Terrain varié</p>
            <p class="text-xs text-gray-500">Préparation en cours</p>
          </div>
          <div class="border-l-4 border-gray-400 pl-4 py-2">
            <p class="font-medium text-gray-900">Course de côte du Forez</p>
            <p class="text-sm text-gray-600">16 février 2026 - Montagne</p>
            <p class="text-xs text-gray-500">À confirmer</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>