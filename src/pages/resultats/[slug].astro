---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const resultats = await getCollection('resultats');
  return resultats.map((resultat) => ({
    params: { slug: resultat.slug },
    props: { resultat },
  }));
}

const { resultat } = Astro.props;
const { Content } = await resultat.render();
---

<BaseLayout title={resultat.data.title} description={resultat.data.description || `Résultats de ${resultat.data.epreuve}`}>
  <article class="min-h-screen bg-gray-50 py-12">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header de l'article -->
      <div class="bg-white rounded-2xl shadow-lg overflow-hidden mb-8">
        <div class="p-8">
          <div class="flex items-center space-x-4 text-sm text-gray-500 mb-4">
            <span>{new Date(resultat.data.pubDate).toLocaleDateString('fr-FR', { 
              year: 'numeric', 
              month: 'long', 
              day: 'numeric' 
            })}</span>
            {resultat.data.lieu && (
              <>
                <span>•</span>
                <span>{resultat.data.lieu}</span>
              </>
            )}
            {resultat.data.categorie && (
              <>
                <span>•</span>
                <span>{resultat.data.categorie}</span>
              </>
            )}
          </div>
          
          <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            {resultat.data.title}
          </h1>
          
          {resultat.data.description && (
            <div class="bg-gray-100 border-l-4 border-red-500 p-6 mb-6">
              <p class="text-lg text-gray-700 leading-relaxed">
                {resultat.data.description}
              </p>
            </div>
          )}
        </div>
      </div>

      <!-- Photos (si disponibles) -->
      {resultat.data.images && resultat.data.images.length > 0 && (
        <div class="bg-white rounded-2xl shadow-lg p-8 mb-8">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {resultat.data.images.map((image, index) => (
              <div class="overflow-hidden rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300">
                <img 
                  src={image} 
                  alt={`Photo ${index + 1} - ${resultat.data.epreuve}`}
                  class="w-full h-64 object-cover hover:scale-105 transition-transform duration-300"
                />
              </div>
            ))}
          </div>
        </div>
      )}

      <!-- Contenu de l'article -->
      <div class="bg-white rounded-2xl shadow-lg p-8">
        <div class="prose prose-lg max-w-none">
          <Content />
        </div>
      </div>

      <!-- Navigation -->
      <div class="mt-8 text-center">
        <a 
          href="/resultats" 
          class="inline-flex items-center px-6 py-3 bg-red-600 text-white font-semibold rounded-lg hover:bg-red-700 transition-colors"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Retour aux résultats
        </a>
      </div>
    </div>
  </article>
</BaseLayout>

<style>
  .prose h1, .prose h2, .prose h3 {
    color: #1f2937;
  }
  
  .prose h2 {
    font-size: 1.5rem;
    font-weight: 700;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  
  .prose h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }
  
  .prose p {
    margin-bottom: 1rem;
    line-height: 1.7;
  }
  
  .prose strong {
    font-weight: 600;
    color: #dc2626;
  }
  
  .prose em {
    font-style: italic;
    color: #6b7280;
  }
  
  /* Styles pour les images dans le contenu Markdown */
  .prose img {
    width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 1.5rem 0;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }
  
  .prose figure {
    margin: 1.5rem 0;
  }
  
  .prose figcaption {
    text-align: center;
    font-style: italic;
    color: #6b7280;
    margin-top: 0.5rem;
    font-size: 0.875rem;
  }
</style>