---
import BaseLayout from '../layouts/BaseLayout.astro';

// Récupérer les sorties
const allRides = await Astro.glob('../content/sorties/*.md');
const upcomingRides = allRides
  .sort((a, b) => new Date(a.frontmatter.date).getTime() - new Date(b.frontmatter.date).getTime())
  .filter(ride => new Date(ride.frontmatter.date) >= new Date());
---

<BaseLayout title="Calendrier" description="Calendrier des sorties et événements de l'Étoile Cycliste Ouvrière de Firminy">
  <div class="pt-20 pb-16 bg-gradient-to-br from-green-50 to-emerald-100">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
        Calendrier du club
      </h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Découvrez toutes nos sorties, entraînements et événements à venir
      </p>
    </div>
  </div>

  <section class="py-16">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Événements récurrents -->
      <div class="mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Événements récurrents</h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-blue-500">
            <div class="flex items-center mb-4">
              <div class="bg-blue-100 p-3 rounded-full">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-semibold text-gray-900">Entraînement</h3>
                <p class="text-sm text-gray-600">Tous les mercredis</p>
              </div>
            </div>
            <p class="text-gray-600 mb-4">
              Entraînement technique et physique pour tous les niveaux
            </p>
            <div class="text-sm text-gray-500">
              <p><strong>Horaire:</strong> 18h30 - 20h00</p>
              <p><strong>Lieu:</strong> Stade municipal</p>
            </div>
          </div>

          <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-green-500">
            <div class="flex items-center mb-4">
              <div class="bg-green-100 p-3 rounded-full">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-semibold text-gray-900">Sortie découverte</h3>
                <p class="text-sm text-gray-600">Tous les samedis</p>
              </div>
            </div>
            <p class="text-gray-600 mb-4">
              Exploration de nouveaux parcours en groupe
            </p>
            <div class="text-sm text-gray-500">
              <p><strong>Horaire:</strong> 14h00 - 17h00</p>
              <p><strong>Lieu:</strong> Variable selon parcours</p>
            </div>
          </div>

          <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-purple-500">
            <div class="flex items-center mb-4">
              <div class="bg-purple-100 p-3 rounded-full">
                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-semibold text-gray-900">Réunion club</h3>
                <p class="text-sm text-gray-600">Premier dimanche du mois</p>
              </div>
            </div>
            <p class="text-gray-600 mb-4">
              Assemblée mensuelle et planification des activités
            </p>
            <div class="text-sm text-gray-500">
              <p><strong>Horaire:</strong> 10h00 - 11h30</p>
              <p><strong>Lieu:</strong> Salle municipale</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Prochaines sorties -->
      <div>
        <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Prochaines sorties</h2>
        {upcomingRides.length > 0 ? (
          <div class="space-y-6">
            {upcomingRides.map((ride) => (
              <div class="bg-white rounded-xl shadow-lg overflow-hidden">
                <div class="md:flex">
                  <div class="md:w-1/4 bg-gradient-to-br from-blue-500 to-blue-600 p-6 text-white text-center">
                    <div class="text-3xl font-bold">
                      {new Date(ride.frontmatter.date).getDate()}
                    </div>
                    <div class="text-sm uppercase tracking-wide">
                      {new Date(ride.frontmatter.date).toLocaleDateString('fr-FR', { month: 'long' })}
                    </div>
                    <div class="text-xs opacity-75">
                      {new Date(ride.frontmatter.date).getFullYear()}
                    </div>
                  </div>
                  <div class="md:w-3/4 p-6">
                    <div class="flex flex-wrap items-center gap-2 mb-4">
                      <span class="bg-blue-100 text-blue-800 text-xs font-medium px-2 py-1 rounded">
                        {ride.frontmatter.difficulty}
                      </span>
                      <span class="bg-green-100 text-green-800 text-xs font-medium px-2 py-1 rounded">
                        {ride.frontmatter.distance}
                      </span>
                    </div>
                    <h3 class="text-xl font-bold text-gray-900 mb-2">
                      {ride.frontmatter.title}
                    </h3>
                    <p class="text-gray-600 mb-4">
                      {ride.frontmatter.description}
                    </p>
                    <div class="flex items-center justify-between">
                      <div class="text-sm text-gray-500">
                        <p><strong>Départ:</strong> {ride.frontmatter.startTime || '9h00'}</p>
                        <p><strong>Lieu:</strong> {ride.frontmatter.startLocation || 'Place de la République'}</p>
                      </div>
                      <a href={`/sorties/${ride.file.split('/').pop()?.replace('.md', '')}`} 
                         class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors">
                        Voir détails
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            ))}
          </div>
        ) : (
          <div class="text-center py-12">
            <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <h3 class="text-lg font-medium text-gray-900 mb-2">Aucune sortie programmée</h3>
            <p class="text-gray-600">Les prochaines sorties seront bientôt annoncées.</p>
          </div>
        )}
      </div>
    </div>
  </section>
</BaseLayout>