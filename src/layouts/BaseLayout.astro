---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Étoile Cycliste Ouvrière de Firminy" } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=yes" />
    <meta name="theme-color" content="#DC2626" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    <meta name="apple-mobile-web-app-title" content="ECOF" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | ECOF</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
      /* Amélioration du scroll sur mobile */
      html {
        scroll-behavior: smooth;
        -webkit-text-size-adjust: 100%;
      }
      
      /* Amélioration des zones tactiles */
      .touch-manipulation {
        touch-action: manipulation;
        -webkit-tap-highlight-color: rgba(0, 0, 0, 0.1);
      }
      
      /* Prévention du zoom sur les inputs sur iOS */
      input, select, textarea {
        font-size: 16px;
      }
      
      /* Amélioration du focus pour l'accessibilité */
      button:focus-visible, a:focus-visible {
        outline: 2px solid #DC2626;
        outline-offset: 2px;
      }
    </style>
  </head>
  <body class="font-inter bg-white antialiased">{
    <!-- Menu Hamburger -->
    <nav class="fixed top-0 left-0 z-50 p-3 sm:p-4">
      <button id="menu-toggle" class="bg-white/90 backdrop-blur-sm rounded-full p-3 sm:p-3 shadow-lg hover:bg-white transition-all duration-300 touch-manipulation" aria-label="Menu principal">
        <div class="w-5 h-5 sm:w-6 sm:h-6 flex flex-col justify-center items-center">
          <span class="block w-4 h-0.5 sm:w-5 sm:h-0.5 bg-gray-800 transition-all duration-300 transform" id="line1"></span>
          <span class="block w-4 h-0.5 sm:w-5 sm:h-0.5 bg-gray-800 mt-1 transition-all duration-300 transform" id="line2"></span>
          <span class="block w-4 h-0.5 sm:w-5 sm:h-0.5 bg-gray-800 mt-1 transition-all duration-300 transform" id="line3"></span>
        </div>
      </button>
    </nav>

    <!-- Menu Overlay -->
    <div id="menu-overlay" class="fixed inset-0 bg-black/50 backdrop-blur-sm z-40 opacity-0 invisible transition-all duration-300">
      <div class="fixed left-0 top-0 h-full w-full sm:w-80 bg-white shadow-2xl transform -translate-x-full transition-transform duration-300" id="menu-panel">
        <div class="p-6 sm:p-8 pt-16 sm:pt-16 h-full overflow-y-auto">
          <div class="mb-6 sm:mb-8">
            <h2 class="text-xl sm:text-2xl font-bold text-gray-800">ECOF</h2>
            <p class="text-gray-600 text-sm">Étoile Cycliste Ouvrière de Firminy</p>
          </div>
          
          <nav class="space-y-1 sm:space-y-2">
            <a href="/" class="flex items-center space-x-3 text-gray-700 hover:text-blue-600 transition-colors p-3 sm:p-3 rounded-lg hover:bg-blue-50 touch-manipulation">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
              </svg>
              <span class="font-medium text-base sm:text-base">Accueil</span>
            </a>
            
            <a href="/actualites" class="flex items-center space-x-3 text-gray-700 hover:text-blue-600 transition-colors p-3 sm:p-3 rounded-lg hover:bg-blue-50 touch-manipulation">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
              </svg>
              <span class="font-medium text-base sm:text-base">Actualités</span>
            </a>
            
            <a href="/calendrier" class="flex items-center space-x-3 text-gray-700 hover:text-blue-600 transition-colors p-3 sm:p-3 rounded-lg hover:bg-blue-50 touch-manipulation">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <span class="font-medium text-base sm:text-base">Calendrier</span>
            </a>
            
            <!-- Menu Le Club avec sous-menus -->
            <div class="space-y-1">
              <button class="flex items-center justify-between w-full text-gray-700 hover:text-blue-600 transition-colors p-3 sm:p-3 rounded-lg hover:bg-blue-50 touch-manipulation" id="club-menu-toggle" aria-expanded="false" aria-controls="club-submenu">
                <div class="flex items-center space-x-3">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                  </svg>
                  <span class="font-medium text-base sm:text-base">Le Club</span>
                </div>
                <svg class="w-4 h-4 transition-transform duration-200" id="club-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </button>
              
              <div class="ml-6 sm:ml-8 space-y-1 hidden" id="club-submenu">
                <a href="/historique" class="flex items-center space-x-3 text-gray-600 hover:text-blue-600 transition-colors p-2 sm:p-2 rounded-lg hover:bg-blue-50 touch-manipulation">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                  </svg>
                  <span class="font-medium text-sm sm:text-base">Historique</span>
                </a>
                
                <a href="/organigramme" class="flex items-center space-x-3 text-gray-600 hover:text-blue-600 transition-colors p-2 sm:p-2 rounded-lg hover:bg-blue-50 touch-manipulation">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                  </svg>
                  <span class="font-medium text-sm sm:text-base">Organigramme</span>
                </a>
                
                <a href="/esprit" class="flex items-center space-x-3 text-gray-600 hover:text-blue-600 transition-colors p-2 sm:p-2 rounded-lg hover:bg-blue-50 touch-manipulation">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                  </svg>
                  <span class="font-medium text-sm sm:text-base">Esprit</span>
                </a>
              </div>
            </div>
            
            <a href="/nous-rejoindre" class="flex items-center space-x-3 text-gray-700 hover:text-blue-600 transition-colors p-3 sm:p-3 rounded-lg hover:bg-blue-50 touch-manipulation">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
              <span class="font-medium text-base sm:text-base">Nous rejoindre</span>
            </a>
            
            <a href="/ecole-de-velo" class="flex items-center space-x-3 text-gray-700 hover:text-blue-600 transition-colors p-3 sm:p-3 rounded-lg hover:bg-blue-50 touch-manipulation">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <circle cx="5.5" cy="17.5" r="3.5" stroke-width="2"/>
                <circle cx="18.5" cy="17.5" r="3.5" stroke-width="2"/>
                <path d="M15 6a1 1 0 1 0 0-2 1 1 0 0 0 0 2z" stroke-width="2"/>
                <path d="M9 12h3l3-6h2l1.5 3" stroke-width="2"/>
                <path d="M9 12v5" stroke-width="2"/>
                <path d="M15 12l-3 5" stroke-width="2"/>
              </svg>
              <span class="font-medium text-base sm:text-base">École de vélo</span>
            </a>
            
            <a href="/nous-soutenir" class="flex items-center space-x-3 text-gray-700 hover:text-red-600 transition-colors p-3 sm:p-3 rounded-lg hover:bg-red-50 touch-manipulation">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
              <span class="font-medium text-base sm:text-base">Nous soutenir</span>
            </a>
          </nav>
        </div>
      </div>
    </div>

    <main>
      <slot />
    </main>

    <script>
      // Menu hamburger functionality
      const menuToggle = document.getElementById('menu-toggle');
      const menuOverlay = document.getElementById('menu-overlay');
      const menuPanel = document.getElementById('menu-panel');
      const line1 = document.getElementById('line1');
      const line2 = document.getElementById('line2');
      const line3 = document.getElementById('line3');
      
      // Submenu functionality
      const clubMenuToggle = document.getElementById('club-menu-toggle');
      const clubSubmenu = document.getElementById('club-submenu');
      const clubArrow = document.getElementById('club-arrow');
      
      let isMenuOpen = false;
      let isClubSubmenuOpen = false;
      
      function toggleMenu() {
        isMenuOpen = !isMenuOpen;
        
        if (isMenuOpen) {
          // Open menu
          menuOverlay.classList.remove('opacity-0', 'invisible');
          menuPanel.classList.remove('-translate-x-full');
          
          // Animate hamburger to X
          line1.classList.add('rotate-45', 'translate-y-1.5');
          line2.classList.add('opacity-0');
          line3.classList.add('-rotate-45', '-translate-y-1.5');
        } else {
          // Close menu
          menuOverlay.classList.add('opacity-0', 'invisible');
          menuPanel.classList.add('-translate-x-full');
          
          // Animate X back to hamburger
          line1.classList.remove('rotate-45', 'translate-y-1.5');
          line2.classList.remove('opacity-0');
          line3.classList.remove('-rotate-45', '-translate-y-1.5');
          
          // Close submenu when main menu closes
          if (isClubSubmenuOpen) {
            toggleClubSubmenu();
          }
        }
      }
      
      function toggleClubSubmenu() {
        isClubSubmenuOpen = !isClubSubmenuOpen;
        
        if (isClubSubmenuOpen) {
          clubSubmenu.classList.remove('hidden');
          clubArrow.classList.add('rotate-90');
          clubMenuToggle.setAttribute('aria-expanded', 'true');
        } else {
          clubSubmenu.classList.add('hidden');
          clubArrow.classList.remove('rotate-90');
          clubMenuToggle.setAttribute('aria-expanded', 'false');
        }
      }
      
      menuToggle.addEventListener('click', toggleMenu);
      clubMenuToggle.addEventListener('click', toggleClubSubmenu);
      
      menuOverlay.addEventListener('click', (e) => {
        if (e.target === menuOverlay) {
          toggleMenu();
        }
      });
      
      // Close menu on escape key
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && isMenuOpen) {
          toggleMenu();
        }
      });
    </script>
  </body>
</html>